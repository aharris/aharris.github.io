.work-content
  padding 3em 0
  .publicity
    text-align center
    margin-bottom 5px
    font-size 16px
  .publicity-date
    margin-top 0
    text-align center
    color flat-gray-2

.quote
  padding 40px
  position relative
  background lighten(flat-gray-1, 50%)
  border-radius 10px
  .view-article
    display block
    margin-top 2em
    text-align center

.quote-symbol
  font-size 3em
  font-family 'passionbold'
  color flat-green-2
  display inline-block
  vertical-align super
  transform scale(-1, -1)
  position absolute
  top 0
  left 20px
  line-height 1

.thumbs
  list-style none
  padding 0
  text-align center
  margin-bottom 10em
  cf()
  a
    text-decoration none
    color flat-gray-4

.thumb
  box-sizing border-box
  padding .2em
  padding 10px
  width 100%
  border-radius 2px
  background rgba(255,255,255,.8)
  transition all 300ms
  margin-bottom 2em
  min-height 250px
  +between(600px, 767px)
    col(1/2)
    &:nth-child(even)
      margin-right 0
  +between(768px, 1023px)
    col(1/3)
    &:nth-child(3n)
      margin-right 0
  +above(1024px)
    col(1/4)
  &:hover
    background rgba(255,255,255,1)
    box-shadow 0 0 5px 1px rgba(0,0,0,.1)
    .view-link
      color flat-orange-3

.thumb-wrap
  width 80%
  height 140px
  position relative
  margin 0 auto
  opacity .7

  img
    display block
    position absolute
    tranform-style preserve-3d
    top 50%
    left 50%
    transform translate(-50%, -50%)


.tasks
  text-align center

  li
    display inline
    text-decoration none

    &:before
      content ''
      display inline-block
      vertical-align middle
      height 5px
      width 5px
      background flat-gray-2
      border-radius 500px
      margin 0 10px

    &:first-child
      &:before
        display none

.view-link
  color flat-orange-2
  text-align center
  margin-top 1em
  font-size 15px
  font-family open_sanssemibold

.view-site
  position absolute
  font-size 16px
  font-family header-font

.client-list
  column-count 4
  column-gap 3%
  font-size 15px
  line-height 1.7

.main-images
  li
    text-align center


.details
  h2
    margin-bottom 0
  p
    margin 0 auto
    +above(768px)
      text-align center
      width 90%


.tech-list
  margin-top 2em
  column-count 3
  column-gap 3%
  font-size 15px
  line-height 3
  color flat-green-2
  text-align center


//Breathless
.breathless
  .work-bg
    background url('/images/breathless/thumb_bg.png')
  .main-images
    padding 2em
    cf()
    li
      width 100%
      margin-bottom 2em
      +above(768px)
        margin-bottom 0
        col(1/3)

